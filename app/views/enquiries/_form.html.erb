<div class="row">
  <div class ="col s12 m10 offset-m1 l8 offset-l2">

<%= form_for Enquiry.new do |f| %>

  <div class="input-field light grey-darken-2">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="input-field light grey-darken-2">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="input-field light grey-darken-2">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="input-field light grey-darken-2">
    <%= f.label :message %>
    <%= f.text_field :message %>
  </div>

  <div class="btn waves-effect light grey darken-1">
    <%= link_to 'Submit', @enquiry_path , :class => "grey-text text-lighten-4 light"%>
  </div>
<% end %>

</div>
</div>
